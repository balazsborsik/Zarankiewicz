{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Project",
      "type": "shell",
      "command": "C:/msys64/mingw64/bin/g++.exe",
      "args": [
        "-std=c++20",
        "-O2",
        "-Wall",
        "-Wextra",
        "-Iinclude",
        "${workspaceFolder}/src/main.cpp",
        "${workspaceFolder}/src/config/*.cpp",
        "${workspaceFolder}/src/core/*.cpp",
        "${workspaceFolder}/src/io/*.cpp",
        "${workspaceFolder}/src/logger/*.cpp",
        "${workspaceFolder}/src/probability/*.cpp",
        "${workspaceFolder}/src/structure/*.cpp",
        "${workspaceFolder}/src/util/*.cpp",
        "-o",
        "${workspaceFolder}/bin/program.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build and Run Program",
      "type": "shell",
      "command": "${workspaceFolder}/bin/program.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build Project"
      ],
      "problemMatcher": []
    },
    {
      "label": "Run Program",
      "type": "shell",
      "command": "${workspaceFolder}/bin/program.exe",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}